<Window x:Class="ex8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,199,0,0" FontSize="{Binding Value, ElementName=SliderName}" Text="funfa" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Slider x:Name="SliderName" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Width="120" Maximum="100" TickFrequency="5"/>
        <TextBox x:Name="T2" HorizontalAlignment="Center" Margin="0,262,0,0" Text="{Binding Value, ElementName=SliderName, StringFormat=###.##}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
